@model Study2gether.Models.User

@{
    ViewData["Title"] = "Cadastro";
}

<h1 class="text-center" style="color:white">Cadastro</h1>

<hr />
<div class="row text-center justify-content-center">
    <div class="col-md-4">
        <form asp-action="Cadastro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-left">
                <label asp-for="email" class="control-label" style="color:white"></label>
                <input asp-for="email" class="form-control" type="email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="password" class="control-label" style="color:white"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-controller="Users" asp-action="RecuperarSenha">Recuperar senha</a>
                <a class="btn btn-info" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="changePasswordConfirmation" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color: green">Bem vindo ao study2gether!</h5>

            </div>
            <div class="modal-body">
                @TempData["success"]
            </div>
            <div class="modal-footer">
                <a class="btn btn-success" asp-controller="Home" asp-action="Index">Fechar</a>
            </div>
        </div>
    </div>
</div>



@if (TempData["success"] != null)
{
    <script>
        $('#changePasswordConfirmation').modal('show');
    </script>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

