@model Study2gether.Models.User

@{
    ViewData["Title"] = "Editar Perfil";
}
<div class="completePage-alterarSenha">
    <h1 style="color: white">Alterar Senha</h1>
<hr />

<link rel="stylesheet" href="../../css/editarPerfil.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">


<div class="editarPerfil">
    <h6 class="text-danger">@ViewBag.Message</h6>
    <form asp-action="AlterarSenha">
        <div id="container-d">
            <div class="form-group-a">
                <label style="color: white" asp-for="password">Senha Atual
                    <input type="password" name="previousPassword" value="" />
                </label>
            </div>
            <div class="form-group-a">
                <label style="color: white">Nova Senha
                    <input type="password" name="newPassword1" value="" />
                </label>
            </div>
            <div class="form-group-a">
                <label style="color: white" asp-for="password" class="confirmarNovaSenha">Confirmar Nova Senha
                    <input type="password" name="newPassword2" value="" />
                </label>
            </div>
            <div class="form-group">
                <button type="submit" value="Alterar senha" class="btn btn-primary" />Alterar Senha</button>
                <a class="btn btn-info" asp-controller="Users" asp-action="Historico">Cancelar</a>
            </div>
        </div>
    </form>
 </div>
 </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="modal fade" id="changePasswordConfirmation" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" >
                <h5 class="modal-title" style="color: green">Olá @User.Identity.Name,</h5>
                
            </div>
            <div class ="modal-body">      
                @TempData["success"]
            </div>
        <div class="modal-footer">           
                <a class="btn btn-success" asp-controller="users" asp-action="Historico">Fechar</a>
        </div>
    </div>
</div>
</div>


    
    @if (TempData["success"] != null)
    {
     <script>
        $('#changePasswordConfirmation').modal('show');
    </script>
    }
