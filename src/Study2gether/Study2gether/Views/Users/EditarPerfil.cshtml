@model Study2gether.Models.User

@{
    ViewData["Title"] = "Editar Perfil";
}

<h1>Editar Perfil</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarPerfil">

            <div class="form-group">
                <label asp-for="imageLink">Foto</label>
                <input asp-for="imageLink" />
                <span asp-validation-for="imageLink"></span>
            </div>
            <div class="form-group">
                <label asp-for="name">Nome</label>
                <input asp-for="name" />
                <span asp-validation-for="name"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Sobre Você</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description"></span>
            </div>
            <div class="form-group">
                <label asp-for="socialMedia" class="control-label">Redes Sociais</label>
                <input asp-for="socialMedia" class="form-control" />
                <span asp-validation-for="socialMedia"></span>
            </div>
            <!--div class="form-group">
                <label asp-for="email">E-mail</label>
                <input asp-for="email" />
                <span asp-validation-for="email"></span>
            </div-->
            <div class="form-group">
                <label asp-for="password" class="control-label">Senha Atual</label>
                <input type="password" name="previousPassword" value="" />
                <!--span asp-validation-for="password"></!--span-->
            </div>
            <div class="form-group">
                <label>Nova Senha</label>
                <input type="password" name="newPassword1" value="" />
                <!--span-- asp-validation-for="password"></!--span-->
            </div>
            <div class="form-group">
                <label>Confirmação Nova Senha</label>
                <input type="password" name="newPassword1" value="" />
                <!--span-- asp-validation-for="password"></!--span-->
            </div>

            <div class="form-group">
                <a class="btn btn-info" asp-controller="Users" asp-action="Historico">Cancelar</a>
                <!--<a class="btn btn-info" asp-controller="Users" asp-action="EditarPerfil">Salvar Perfil</a>-->              
                <input type="submit" value="Salvar Perfil" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}