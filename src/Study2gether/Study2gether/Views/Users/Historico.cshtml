@model Study2gether.Models.User

@{
    ViewData["Title"] = "Histórico";
}

<h1>Histórico</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Historico">
            <div class="form-group">
                <label asp-for="imageLink" class="text-danger">Foto</label>
                <input asp-for="imageLink" class="text-danger" />
                <span asp-validation-for="imageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="text-danger">Nome</label>
                <input asp-for="name" class="text-danger" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Sobre Você</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="socialMedia" class="control-label">Redes Sociais</label>
                <input asp-for="socialMedia" class="form-control" />
                <span asp-validation-for="socialMedia" class="text-danger"></span>
            </div>

            <h3>Histórico</h3>
            <h5>Perguntas</h5>
            <div class="form-group">
                <p>Pergunta 1</p>
                <p>Pergunta 2</p>
                <p>Pergunta 3</p>
            </div>
               
            <h5>Respostas</h5>
            <div class="form-group">
                <p>Resposta 1</p>
                <p>Resposta 2</p>
                <p>Resposta 3</p>
            </div>
            <h5>Favoritos</h5>
            <div class="form-group">
                <p>Favorito 1</p>
                <p>Favorito 2</p>
                <p>Favorito 3</p>
            </div>

            <div class="form-group">
                <a class="btn btn-info" asp-controller="Users" asp-action="EditarPerfil">Editar Perfil</a>
                <a class="btn btn-info" asp-controller="Home" asp-action="Index">Sair</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


