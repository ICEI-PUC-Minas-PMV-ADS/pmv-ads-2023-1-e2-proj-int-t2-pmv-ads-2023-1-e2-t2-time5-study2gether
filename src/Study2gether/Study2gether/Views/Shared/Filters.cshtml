@{
    var axes = ViewData["Axes"] as List<Axis>;
    var microfoundations = ViewData["Microfoundations"] as List<Microfoundation>;
    var categories = ViewData["Categories"] as List<Category>;
}

<link rel="stylesheet" href="~/css/site.css" />

<form id="filtros-form" method="get">
    <div class="form-row">
        <div class="col" id="divFiltroEixos">
            <select class="form-select" name="axis">
             
                <option selected value="">Eixo</option>
                @foreach (var element in axes)
                {
                    <option value="@element.idAxis">@element.name</option>
                }
            </select>
        </div>
        <div class="col" id="divFiltroMicrofundamentos">
            <select class="form-select" name="micro">
                <option selected value="">Microfundamento</option>
                @foreach (var element in microfoundations)
                {
                    <option value="@element.idMicrofoundation">@element.name</option>
                }
            </select>
        </div>
        <div class="col" id="divFiltroCategorias">
            <select class="form-select" name="category">
                <option selected value="">Categoria</option>
                @foreach (var element in categories)
                {
                    <option value="@element.idCategory">@element.name</option>
                }
            </select>
        </div>
        <div class="col">
            <a class="btn btn-info" onclick="Filtrar()"><i class="fas fa-filter"></i></a>
        </div>
    </div>
</form>

<script>
    function Filtrar() {
        document.getElementById('filtros-form').submit();
    }
</script>